@model Retail_Data_Tracker.Models.OrderDetailsViewModel

<h2>Order Details</h2>

<h3>Order Total: @Model.OrderTotal</h3>

<table class="table">
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Cost</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var itemQuantity in Model.ItemQuantities)
        {
            <tr>
                <td>@itemQuantity.Item.Name</td>
                <td>@itemQuantity.Item.ItemDesc</td>
                <td>@itemQuantity.Quantity</td>
                <td>@itemQuantity.Item.SellCost * @itemQuantity.Quantity</td>
            </tr>
        }
    </tbody>
</table>
